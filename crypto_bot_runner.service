[Unit]
Description=Crypto Trading Bot - Standalone Runner
After=network.target

[Service]
User=root
WorkingDirectory=/Antigravity/antigravity/scratch/crypto_trading_bot
ExecStart=/usr/bin/python3 /Antigravity/antigravity/scratch/crypto_trading_bot/run_bot.py
Restart=always
RestartSec=5

# Optional: Set Telegram credentials as environment variables
# Environment="TELEGRAM_BOT_TOKEN=your_bot_token_here"
# Environment="TELEGRAM_CHAT_ID=your_chat_id_here"

[Install]
WantedBy=multi-user.target
